{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "esnext",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "module": "preserve",
    "noEmit": true,
    "lib": ["esnext", "dom", "dom.iterable"]
  },
  "include": ["./**/*.ts", "./**/*.d.ts", "./**/*.tsx", "./**/*.vue"],
  "exclude": ["dist", "node_modules", "src-capacitor", "src-cordova", ".quasar"]
}
